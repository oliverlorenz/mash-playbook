{% if gowa_container_environment_debug %}
APP_DEBUG={{ gowa_container_environment_debug }}
{% endif %}

{% if gowa_container_environment_app_os %}
APP_OS={{ gowa_container_http_port }}
{% endif %}

{% if gowa_container_environment_basic_auth_user and gowa_container_environment_basic_auth_password %}
APP_BASIC_AUTH={{ gowa_container_environment_basic_auth_user }}:{{ gowa_container_environment_basic_auth_password }}
{% endif %}

{% if gowa_container_environment_auto_mark_read %}
APP_AUTO_MARK_READ={{ gowa_container_environment_auto_mark_read }}
{% endif %}

{% if gowa_container_environment_webhook %}
WHATSAPP_WEBHOOK={{ gowa_container_environment_webhook }}
{% endif %}

{% if gowa_container_environment_webhook_secret %}
WHATSAPP_WEBHOOK_SECRET={{ gowa_container_environment_webhook_secret }}
{% endif %}

{% if gowa_container_environment_account_validation %}
APP_ACCOUNT_VALIDATION={{ gowa_container_environment_account_validation }}
{% endif %}

{% if gowa_container_environment_chat_storage %}
APP_CHAT_STORAGE={{ gowa_container_environment_chat_storage }}
{% endif %}

{{ gowa_environment_variables_additional_variables }}
